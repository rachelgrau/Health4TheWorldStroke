<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rachel.health4theworldstroke">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.HelpMeSpeakActivity" />
        <activity android:name=".Activities.LearnActivity" />
        <activity android:name=".Activities.RemindersActivity" />
        <activity android:name=".Activities.ReadContentActivity" />
        <activity android:name=".Activities.VideoContentActivity" />
        <activity android:name=".Activities.CreateReminderActivity"></activity>
    </application>

</manifest>