<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_learn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rachel.health4theworldstroke.Activities.LearnActivity">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        style="@style/ToolBarStyle"
        android:id="@+id/learn_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        tools:layout_editor_absoluteX="8dp" >

        <TextView
            style="@style/ToolBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

    </android.support.v7.widget.Toolbar>

    <!--Read / Video Tabs-->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/learn_toolbar">
        <!--Read Tab-->
        <LinearLayout
            android:id="@+id/read_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:id="@+id/read_button_top"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorPrimaryDark">
            </View>
            <View
                android:id="@+id/read_button_gray_bottom"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray">
            </View>
        </LinearLayout>
        <!--Video Tab-->
        <LinearLayout
            android:id="@+id/video_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:id="@+id/video_button_top"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorPrimaryDark"/>
            <View
                android:id="@+id/video_button_gray_bottom"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray">
            </View>
        </LinearLayout>
    </LinearLayout>

    <!--ListView-->
    <ListView
        android:id="@+id/learn_content_list_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/button_container">
    </ListView>

</RelativeLayout>
