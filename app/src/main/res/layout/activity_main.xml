<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_height="72dp"
            app:srcCompat="@color/colorAccent"
            android:clickable="true"
            android:id="@+id/helpMeSpeakButton"
            android:onClick="helpMeSpeakSelected"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/quoteLabel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp" />

        <ImageView
            android:layout_height="72dp"
            app:srcCompat="@color/colorAccent"
            android:clickable="true"
            android:id="@+id/videoButton"
            android:onClick="videoSelected"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/helpMeSpeakButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/orangeBar"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <ImageView
            app:srcCompat="@color/colorAccent"
            android:id="@+id/remindersButton"
            android:clickable="true"
            android:layout_height="72dp"
            android:onClick="remindersSelected"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/learnButton" />

        <ImageView
            app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/spacer"
            android:clickable="true"
            android:layout_height="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/learnButton"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_width="0dp" />

        <ImageView
            app:srcCompat="@color/colorAccent"
            android:id="@+id/learnButton"
            android:layout_width="0dp"
            android:clickable="true"
            android:layout_height="72dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:onClick="readSelected"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/videoButton" />

        <TextView
            android:text="@string/quote"
            android:id="@+id/quoteLabel"
            android:layout_width="0dp"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif-light"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="175dp" />

        <ImageView
            android:layout_width="20dp"
            app:srcCompat="@color/green"
            android:id="@+id/greenBar"
            android:layout_height="72dp"
            app:layout_constraintLeft_toLeftOf="@+id/helpMeSpeakButton"
            app:layout_constraintTop_toTopOf="@+id/helpMeSpeakButton" />

        <ImageView
            android:layout_width="20dp"
            app:srcCompat="@color/lightPink"
            android:id="@+id/pinkBar"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="@+id/videoButton"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:layout_width="20dp"
            app:srcCompat="@color/orange"
            android:id="@+id/orangeBar"
            android:layout_height="72dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/learnButton" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="72dp"
            app:srcCompat="@color/red"
            android:id="@+id/redBar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/learnButton" />

        <TextView
            android:text="@string/learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/learnLabel"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toTopOf="@+id/learnButton"
            android:layout_marginTop="22dp"
            android:layout_marginStart="14dp"
            app:layout_constraintLeft_toRightOf="@+id/orangeBar"
            android:layout_marginLeft="14dp" />

        <TextView
            android:text="@string/reminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remindersLabel"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginStart="14dp"
            app:layout_constraintLeft_toRightOf="@+id/redBar"
            android:layout_marginLeft="14dp"
            app:layout_constraintTop_toTopOf="@+id/remindersButton"
            android:layout_marginTop="22dp" />

        <TextView
            android:text="@string/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoLabel"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintLeft_toLeftOf="@+id/videoButton"
            app:layout_constraintTop_toTopOf="@+id/videoButton"
            android:layout_marginTop="22dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp" />

        <TextView
            android:text="@string/help_me_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helpMeSpeakLabel"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/greenBar"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@+id/helpMeSpeakButton"
            android:layout_marginTop="22dp" />

        <ImageButton
            android:id="@+id/infoButton"
            android:background="@mipmap/white_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toTopOf="@+id/helpMeSpeakButton"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:onClick="infoClicked"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>